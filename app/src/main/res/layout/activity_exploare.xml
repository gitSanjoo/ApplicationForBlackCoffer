<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrouns3"
    tools:context=".Exploare">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_1_exploare1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="INDIVIDUAL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_2_exploare1"
            app:layout_constraintTop_toTopOf="parent">
        </Button>
        <Button
            android:id="@+id/btn_2_exploare1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PROFESSIONAL"
            app:layout_constraintStart_toEndOf="@id/btn_1_exploare1"
            app:layout_constraintEnd_toStartOf="@+id/btn_3_exploare1"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/btn_3_exploare1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MERCHANT"
            app:layout_constraintStart_toEndOf="@+id/btn_2_exploare1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_exploare1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="18dp"

        android:background="@drawable/round_corner"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="200dp">
        <TextView
            android:id="@+id/et_1_exploare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="+ INVITE"
            android:gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="@color/blue_green"/>
        <TextView
            android:id="@+id/et_2_exploare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arnold S."
            android:textColor="@color/blue_green"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_1_exploare1"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/et_3_exploare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bangalore,India"
            android:textColor="@color/blue_green"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/et_2_exploare1"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/seekBar_exploare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            app:thumbColor="#00000000"
            app:thumbElevation="0dp"
            app:trackHeight="8dp"
            android:valueTo="100"
            android:valueFrom="0"
            android:value="20"
            app:trackColor="@color/blue_green"
            app:trackColorInactive="@color/material_on_background_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_3_exploare1"/>
        <TextView
            android:id="@+id/et_4_exploare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOOD | TRAVEL | PHOTOGRAPHY"
            android:textColor="@color/blue_green"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekBar_exploare1"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/et_5_exploare1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hii Community ! I am open to new Connections"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_4_exploare1"
            android:textColor="@color/blue_green"
            android:layout_marginStart="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/ll_exploare"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="@+id/cl_exploare1"
        app:layout_constraintTop_toTopOf="@+id/cl_exploare1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintEnd_toStartOf="@+id/cl_exploare1">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/img_1"
            android:scaleType="fitXY"
            />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_exploare2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_exploare1"
        android:background="@drawable/round_corner"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/et_1_exploare2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="+ INVITE"
            android:gravity="end"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textColor="@color/blue_green"/>
        <TextView
            android:id="@+id/et_2_exploare2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arnold S."
            android:textColor="@color/blue_green"
            android:layout_marginStart="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_1_exploare2"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/et_3_exploare2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bangalore,India"
            android:textColor="@color/blue_green"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@+id/et_2_exploare2"/>
        <com.google.android.material.slider.Slider
            android:id="@+id/seekBar_exploare2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            app:thumbColor="#00000000"
            app:thumbElevation="0dp"
            app:trackHeight="8dp"
            android:valueTo="100"
            android:valueFrom="0"
            android:value="20"
            app:trackColor="@color/blue_green"
            app:trackColorInactive="@color/material_on_background_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_3_exploare2"/>
        <TextView
            android:id="@+id/et_4_exploare2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOOD | TRAVEL | PHOTOGRAPHY"
            android:textColor="@color/blue_green"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekBar_exploare2"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/et_5_exploare2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hii Community ! I am open to new Connections"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_4_exploare2"
            android:textColor="@color/blue_green"
            android:layout_marginStart="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/ll_exploare2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="@+id/cl_exploare2"
        app:layout_constraintTop_toTopOf="@+id/cl_exploare2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintEnd_toStartOf="@+id/cl_exploare2">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/img_2"
            android:scaleType="fitXY"
            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/ll1_bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/img_refine"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="45dp"
                android:src="@drawable/img_explorer"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/network"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="45dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/chat"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/contact"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll1_bottom_nav_bar">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refine"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="40dp"
                android:textColor="@color/blue_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:layout_marginEnd="2dp"
                android:textColor="@color/blue_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network"
                android:layout_marginStart="40dp"
                android:textColor="@color/blue_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:layout_marginStart="40dp"
                android:textColor="@color/blue_green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:layout_marginStart="40dp"
                android:textColor="@color/blue_green"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>